<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!-- ChangeSet 1: Create tasks_table -->
    <changeSet id="20260116100900_init_tasks" author="soupor">
        <createTable tableName="tasks">
            <column name="id" type="INT" autoIncrement="true"><constraints primaryKey="true" primaryKeyName="pk_tasks" nullable="false"/></column>
            <column name="name" type="varchar(50)"><constraints nullable="false"/></column>
            <column name="description" type="varchar(255)"/>
            <column name="priority" type="varchar(20)"/>
            <column name="due_date" type="varchar(50)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>